# direct it all to /dev/null
function nullify() {
  "$@" >/dev/null 2>&1
}

# `shellswitch [bash |zsh]`
#   Must be in /etc/shells
function shellswitch {
	chsh -s $(brew --prefix)/bin/$1
}

function color_my_prompt {
    local __user_and_host="\[\033[01;36m\]\u@\h"
    local __cur_location="\[\033[01;34m\]\w"
    local __git_branch_color="\[\033[31m\]"
    local __git_branch='`git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\(\\\\\1\)\ /`'
    local __prompt_tail="\[\033[35m\]$"
    local __last_color="\[\033[00m\]"
    export PS1="$__user_and_host $__cur_location $__git_branch_color$__git_branch$__prompt_tail$__last_color "
}

function fixssh {
    for key in SSH_AUTH_SOCK SSH_CONNECTION SSH_CLIENT; do
        if (tmux show-environment | grep "^${key}" > /dev/null); then
            value=`tmux show-environment | grep "^${key}" | sed -e "s/^[A-Z_]*=//"`
            export ${key}="${value}"
        fi
    done
}

function _fab {
    local cur
    COMPREPLY=()
    # Variable to hold the current word
    cur="${COMP_WORDS[COMP_CWORD]}"

    # Build a list of the available tasks using the command 'fab -l'
    local tags=$(fab -l 2>/dev/null | grep "^    " | awk '{print $1;}')

    # Generate possible matches and store them in the
    # array variable COMPREPLY
    COMPREPLY=($(compgen -W "${tags}" $cur))
}

function kshell {
    kubectl exec -ti $@ env COLUMNS=$(tput cols) LINES=$(tput lines) TERM=$TERM /bin/bash
}

function klogs {
    kubectl logs $@    
}

function kscp {
    perm=$(stat -c "%a" $1)
    ns=$5
    if [ -z $ns ]; then
        ns="default"
    fi
    cat $1 | kubectl --namespace "$ns" exec -i $2 -c $3 -- bash -c "cat > $4 && chmod $perm $4"
}
